<div class='row col-md-4 mx-auto'>
  <div class='card'>
    <div class='card-header'>
      Account Login
    </div>
    <img src="/images/logo.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo"/>
    <div class='card-body'>
      <form action='/users/signin' method='post'>
        <div class='form-group'>
          <input
            type='email'
            class='form-control'
            name='email'
            placeholder='Email'
          />
        </div>
        <div class='form-group'>
          <input
            type='password'
            class='form-control'
            name='password'
            placeholder='Password'
          />
        </div>

        <button class='btn btn-primary btn-block'>
          SignIn
        </button>
      </form>
    </div>
  </div>
</div>